<div class="section" id="pricing_section" style="<%= layout_bg %>">
    <section class="pricing <%= "parallax_panel" if layout_bg.present? %>" style="<%= bg_color %>">
        <%= raw '<div class="patteren"></div>' if layout.get_field("pattern") %>
        <div class="container">
            <div class="row">
                <div class="title animate fadeIn">
                    <h1 class="light"><%= layout.the_title %></h1>
                    <% if (sub_title = layout.the_field("sub_title")).present? %>
                        <br/>
                        <h2><%= sub_title %></h2>
                    <% end %>
                    <div class="title-detail"><%= raw layout.the_content %> <%= cama_edit_link(layout.the_edit_url) %></div>
                </div>
                <% d1 = ["500", "2000", "1000"]; d2 = ["fadeInLeftBig", "fadeIn", "fadeInRightBig"]; index = 0;
                   current_site.the_posts("camaleon_pricing").decorate.each do |price| %>
                    <div class="col-md-4">
                        <div class="table <%= "blue-table" if index == 1 %> animate <%= d2[index] %>" data-delay="<%= d1[index] %>">
                            <h2><%= price.the_title %> <%= cama_edit_link(price.the_edit_url) %></h2>
                            <div class="price"> <span><%= price.the_field("price") %></span> </div>
                            <ul>
                                <% price.the_fields("details").each do |det| %>
                                    <li><%= raw det %></li>
                                <% end %>
                            </ul>
                            <a href="<%= price.the_url %>"><%= price.the_field("btn_label") %></a> </div>
                    </div>
                    <% index += 1; index = 0 if index == 3 %>
                <% end %>
            </div>
        </div>
    </section>
</div>