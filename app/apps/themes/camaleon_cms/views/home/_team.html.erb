<div class="section" id="team_section" style="<%= layout_bg %>">
    <!-- BEGIN TEAM CONTAINER -->
    <section class="team <%= "parallax_panel" if layout_bg.present? %>" style="<%= bg_color %>" id="team">
        <%= raw '<div class="patteren"></div>' if layout.get_field("pattern") %>
        <div class="container text-center">
            <!-- BEGIN HEADING -->
            <div class="title animate fadeIn">
                <h1 class="light"><%= layout.the_title %></h1>
                <% if (sub_title = layout.the_field("sub_title")).present? %>
                    <br/>
                    <h2><%= sub_title %></h2>
                <% end %>
                <div class="title-detail"><%= raw layout.the_content %> <%= cama_edit_link(layout.the_edit_url) %></div>
            </div>
            <!-- END HEADING -->
            <div class="row">
                <% an = ["fadeInLeftBig", "fadeIn", "fadeInRightBig"];
                   index = 0;
                   current_site.the_posts("camaleon_team").decorate.each do |team| %>
                    <div class="col-md-4 animate <%= an[index] %>" data-delay="100">
                        <div class="team-sec team-sec1 team-style2">
                            <div class="member"><img src="<%= team.get_field("photo", "http://realestatewholesale.org/wp-content/uploads/2015/07/John-Doe_avatar_1436817185.jpg") %>"  alt=""></div>
                            <div class="detail-left">
                                <h4><%= team.the_title %></h4>
                                <span><%= team.the_field("role") %></span>
                                <p><%= raw team.the_excerpt %> <%= cama_edit_link(team.the_edit_url) %></p>
                                <div class="social-icons">
                                    <% if (fb = team.get_field("fb")).present? %>
                                        <a href="<%= fb %>" class="fb"><i class="fa fa-facebook"></i></a>
                                    <% end %>
                                    <% if (tw = team.get_field("tw")).present? %>
                                        <a href="<%= tw %>" class="tw"><i class="fa fa-twitter"></i></a>
                                    <% end %>
                                    <% if (lk = team.get_field("lk")).present? %>
                                        <a href="<%= lk %>" class="lk"><i class="fa fa-linkedin"></i></a>
                                    <% end %>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <%= raw "<div class='clearfix'></div>" if index == 2 %>
                    <% index+=1; index = 0 if index == 3; %>
                <% end %>
            </div>
        </div>

    </section>
</div>